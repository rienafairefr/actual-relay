{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "name": "vscode-jest-tests",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "env": {
            "NODE_OPTIONS": "--experimental-vm-modules"
        },
        "args": [
            "--runInBand",
            "--watchAll=true"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "disableOptimisticBPs": true,
    },
        {
            "type": "node",
            "request": "launch",
            "name": "watch",
            "runtimeExecutable": "yarn",
            "args": ["watch"],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "coverage",
            "runtimeExecutable": "yarn",
            "args": ["coverage"],
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}